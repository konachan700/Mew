<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/headerContainer1"
              android:orientation="horizontal"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center_vertical"
              android:padding="1dp"
              android:background="@color/colorBrandDark1">
    <ImageView
            android:src="@drawable/mewlogo2"
            android:layout_height="56dp"
            android:id="@+id/imageView2"
            android:adjustViewBounds="true"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/mew_hpm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:paddingStart="14dp"
                android:gravity="center|start"
                android:textColor="@color/colorBrandWhite"/>
        <TextView
                android:text="@string/hardware_password_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@color/colorBrandWhite"
                android:paddingStart="16dp"
                android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>