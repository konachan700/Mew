<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:padding="24dp">

        <TextView
                android:text="@string/password_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView12"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:ems="10"
                android:id="@+id/editTextPassDescription"/>
        <TextView
                android:text="@string/url_for_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView11"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:ems="10"
                android:id="@+id/editTextPassURL"/>

        <TextView
                android:text="@string/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView13"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:ems="10"
                android:layout_marginBottom="24dp"
                android:id="@+id/editTextPassLogin"/>

        <CheckBox
                android:text="@string/contain_digits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxDigits" android:layout_margin="4dp"
                android:checked="true" android:enabled="false"/>
        <CheckBox
                android:text="@string/contain_lowercase_alphabet"
                android:checked="true" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxAlphaLower" android:layout_margin="4dp"/>
        <CheckBox
                android:text="@string/contain_uppercase_alphabet"
                android:checked="true" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxAlphaUpper" android:layout_margin="4dp"/>
        <CheckBox
                android:text="@string/contain_symbols"
                android:checked="true" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxSymbols" android:layout_margin="4dp"
        />

        <TextView
                android:text="@string/minimum_password_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView1144" android:layout_marginTop="24dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:text="16"
                android:id="@+id/editTextMinLen"/>
        <TextView
                android:text="@string/maximum_password_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView1354"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:text="24"
                android:id="@+id/editTextMaxLen"/>

    </LinearLayout>
</ScrollView>