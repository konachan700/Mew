<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./system.log</file>
        <encoder>
          <pattern>☆ %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}%n\t\tMESSAGE: %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
          <pattern>☆ %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}%n\t\tMESSAGE: %msg%n</pattern>
        </encoder>
    </appender>
    
    <logger name="org.hibernate" level="ERROR" additivity="false">
        <appender-ref ref="FILE" />
    </logger>
    
    <logger name="org.jboss" level="ERROR" additivity="false">
        <appender-ref ref="FILE" />
    </logger>
    
    <logger name="com.mchange" level="ERROR" additivity="false">
        <appender-ref ref="FILE" />
    </logger>

    <root>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>