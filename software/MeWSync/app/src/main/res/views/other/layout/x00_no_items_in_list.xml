<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/noItemsHere1">
    <TextView
            android:layout_weight="0"
            android:text="@string/no_items_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:paddingLeft="14dp" android:paddingRight="14dp" android:textStyle="bold|italic"
            android:textSize="30sp" android:textColor="@color/lightGray1" android:gravity="center"
            android:layout_margin="15dp"/>
    <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@drawable/mewlogo" android:id="@+id/noItemImage"
            android:layout_margin="30dp" android:alpha="0.07"/>
</LinearLayout>